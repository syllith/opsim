        "yourCharactersUpTo2": {
          "side": "self",
          "type": "character",
          "zones": ["character"],
          "min": 0,
          "max": 2,
          "upTo": true,
          "whoChooses": "self"
        }
      },
      "actions": [
        {
          "type": "modifyStat",
          "stat": "power",
          "mode": "add",
          "amount": 2000,
          "duration": "thisBattle",
          "target": "leaderOrCharacterBuff"
