        "logic": "AND",
        "all": [
          {
            "field": "givenDonCount",
            "op": ">=",
            "value": 1
          },
          {
            "field": "selectorCount",
            "selector": "activeDon",
            "op": "<=",
            "value": 5
          }
        ]
      },
      "selectors": {
        "activeDon": {
          "side": "self",
          "type": "don",
          "zones": ["costArea"],
          "filters": [
            {
              "field": "state",
              "op": "=",
              "value": "active"
            }
          ],
          "min": 0,
          "max": 10,
          "whoChooses": "system"
        },
        "donToRest": {
          "side": "self",
          "type": "don",
          "zones": ["costArea"],
          "filters": [
            {
              "field": "state",
              "op": "=",
              "value": "active"
            }
          ],
          "min": 0,
          "max": 5,
          "upTo": true,
          "whoChooses": "self",
          "bindAs": "restedDon"
        },
        "buffTarget": {
          "side": "self",
          "type": "leaderOrCharacter",
          "zones": ["leader", "character"],
          "filters": [
            {
              "field": "traits",
              "op": "=",
              "value": "strawHatCrew"
            }
          ],
          "min": 0,
          "max": 1,
          "upTo": true,
          "whoChooses": "self"
        }
      },
      "actions": [
        {
          "type": "setState",
          "state": "rested",
          "target": "donToRest",
          "may": true
        },
        {
          "type": "modifyStat",
          "stat": "power",
          "mode": "perCount",
          "perCount": 1,
          "perAmount": 2000,
          "countSelector": "donToRest",
          "duration": "thisBattle",
          "target": "buffTarget"
        }
